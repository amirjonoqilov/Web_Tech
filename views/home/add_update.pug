include ../head.pug
body
  .container.mt-5
    h1 #{mode} Travel Post
    form(method="post" action=(mode === 'Update' ? `/api/travel/${travelPost && travelPost.id}?_method=PUT` : '/api/travel'))
      .mb-3
        label(for="title" class="form-label") Title
        input(type="text" class="form-control" id="title" name="title" required value=(travelPost && travelPost.title || ''))
      .mb-3
        label(for="location" class="form-label") Location
        input(type="text" class="form-control" id="location" name="location" required value=(travelPost && travelPost.location || ''))
      .mb-3
        label(for="photos" class="form-label") Photos (comma-separated URLs)
        input(type="text" class="form-control" id="photos" name="photos" value=(travelPost && travelPost.photos ? travelPost.photos.join(', ') : ''))
      .mb-3
        label(for="experiences" class="form-label") Experiences
        textarea(class="form-control" id="experiences" name="experiences" rows="5") #{travelPost && travelPost.experiences || ''}
      button(type="submit" class="btn btn-success") #{mode === 'Update' ? 'Update' : 'Add'}
      span &nbsp;
      button(type="button" class="btn btn-primary" onclick="window.location.href='/'") Back to list
